azul = #2C6BFC;
azul_fuerte = #074687;
celeste = rgb(0, 152, 218)
gris_claro = #F2F2F2
verde = #AFE900
verde_claro = #C1E946
body
	background-color gris_claro
	header
		background azul_fuerte
		color white
		padding 1em
		position relative
		width 100%
		overflow hidden
	figure
		/*float left
		margin 0
		padding 0*/
		position absolute
		top 1em
		left 1em
	.contenedor
		width 100%
		height 84px
		margin auto
		text-align center
		.titulo
			h1
				margin 0
				padding 0
		nav
			list-style none
			margin 0.5em 0
			padding 0
			li
				display inline-block
				padding 0
				margin 0
				a
					color white
					padding 1em
					margin 0.5em 1em
					text-decoration none
			a:hover
				color blue
				border-bottom 3px solid blue